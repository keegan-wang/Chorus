{
  "name": "@chorus/database",
  "version": "0.1.0",
  "private": true,
  "main": "index.ts",
  "types": "index.ts",
  "exports": {
    ".": "./index.ts"
  },
  "scripts": {
    "migrate": "supabase db push",
    "migrate:local": "psql $DATABASE_URL -f migrations/001_initial.sql",
    "seed": "psql $DATABASE_URL -f seed/001_guardrails.sql && psql $DATABASE_URL -f seed/002_avatars.sql",
    "generate-types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > types/database.types.ts",
    "reset": "supabase db reset"
  },
  "devDependencies": {
    "supabase": "^1.150.0"
  }
}